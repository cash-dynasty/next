generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  email     String   @unique
  nickname  String
  password  String
  role      Role     @default(USER)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  id        String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
}

enum Role {
  USER
  ADMIN
  MODERATOR
}
